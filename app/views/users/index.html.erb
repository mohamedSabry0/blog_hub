<html>
  <head>
    <title>Users</title>
  </head>
  <body>
    <ul class="users-list">
    <% @users.each do |user| %>

      <li>
        <a href="<%= user_path(user) %>">
          <%= image_tag user.photo, size: "40x40" %>
          <p><%= user.name %></p>
          <p>Number of posts: <%= user.posts_counter %></p>
        </a>
      </li>
    <% end %>
    </ul>
  </body>
</html>
